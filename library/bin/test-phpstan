#!/bin/bash

set -e

HOME=/opt/irontec/ivozprovider
cd $HOME

run_test () {
    local APP_ROOT="$HOME/$1"
    local TARGET=$2
    echo "=========================="
    pushd $APP_ROOT
    echo "=========================="

    ${HOME}/library/vendor/bin/phpstan analyse \
        --level max \
        --ansi \
        --no-progress \
        --autoload-file ${APP_ROOT}/vendor/autoload.php \
        --configuration ${APP_ROOT}/phpstan.neon \
        ${TARGET}

    popd
}

run_test library Ivoz
run_test asterisk/agi src
run_test microservices/balances src
run_test microservices/recordings src
run_test microservices/scheduler src
run_test microservices/workers src
run_test microservices/realtime src
run_test web/rest/brand src
run_test web/rest/client src
run_test web/rest/user src
run_test web/rest/platform src
