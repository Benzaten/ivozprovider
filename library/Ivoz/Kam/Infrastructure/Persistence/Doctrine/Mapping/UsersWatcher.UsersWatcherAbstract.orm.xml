<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Kam\Domain\Model\UsersWatcher\UsersWatcherAbstract" table="users_watcher_abstract">
    <unique-constraints>
      <unique-constraint name="kam_users_watchers_idx" columns="presentity_uri,watcher_username,watcher_domain,event"/>
    </unique-constraints>
    <field name="presentityUri" type="string" column="presentity_uri" length="128" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="watcherUsername" type="string" column="watcher_username" length="64" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="watcherDomain" type="string" column="watcher_domain" length="190" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="event" type="string" column="event" length="64" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">presence</option>
      </options>
    </field>
    <field name="status" type="integer" column="status" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="reason" type="string" column="reason" length="64" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="insertedTime" type="integer" column="inserted_time" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </mapped-superclass>
</doctrine-mapping>
