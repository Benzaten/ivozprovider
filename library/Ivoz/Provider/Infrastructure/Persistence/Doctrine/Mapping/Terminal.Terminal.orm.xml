<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
          repository-class="Ivoz\Provider\Infrastructure\Persistence\Doctrine\TerminalDoctrineRepository"
          name="Ivoz\Provider\Domain\Model\Terminal\Terminal"
          table="Terminals"
          change-tracking-policy="DEFERRED_EXPLICIT"
  >
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
      <options>
        <option name="unsigned">1</option>
      </options>
    </id>
    <one-to-many field="astPsEndpoints" target-entity="Ivoz\Ast\Domain\Model\PsEndpoint\PsEndpoint" mapped-by="terminal" fetch="LAZY"/>
    <one-to-many field="users" target-entity="Ivoz\Provider\Domain\Model\User\User" mapped-by="terminal" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
